@model project.Models.Contact
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Contacts";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white" >
                    <h3 class="mb-0 px-3" style="padding: 5px 15px;">THAY ĐỔI THÔNG TIN</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="Name">Tên</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="Title">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="Phone">SĐT</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="Content">Nội dung</label>
                            <input asp-for="Content" class="form-control" />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end px-3">
                            <button type="submit" class="btn btn-success mr-2"><i class="fa fa-save"></i> Lưu</button>
                            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-times"></i> Huỷ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
