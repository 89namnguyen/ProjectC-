@model project.Models.Order
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Users";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 px-3">THAY ĐỔI THÔNG TIN ĐƠN HÀNG</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group px-3">
                            <label asp-for="Name">Họ tên</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-row px-3">
                            <div class="form-group col-md-6">
                                <label asp-for="Phone">Số điện thoại</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group px-3">
                            <label asp-for="Address">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group px-3">
                            <label asp-for="Status">Trạng thái</label>
                            <select asp-for="Status" class="form-control">
                                <option value="0">Chờ xác nhận</option>
                                <option value="1">Đã xác nhận</option>
                                <option value="2">Đã huỷ</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group px-3">
                            <label asp-for="UserId">Người đặt</label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="form-group px-3">
                            <label asp-for="Date">Ngày đặt</label>
                            <input asp-for="Date" class="form-control" type="datetime-local" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end px-3">
                            <button type="submit" class="btn btn-success mr-2"><i class="fa fa-save"></i> Lưu</button>
                            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-times"></i> Huỷ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
